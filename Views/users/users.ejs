<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <h1><a href="/">Blog</a></h1>
  <h2><%= title %></h2>
  <ul>
    <% users.forEach(user => { %>
      <li><a href="/posts/<%= user.id %>"><%= user.nickname %></a></li>
    <% }) %>
  </ul>

  <a href="/users/new">Nouveau</a>

  <!-- Formulaire de déconnexion -->
  <br />
  <br />
  <form action="/users/logout" method="POST">
    <% if (isAuthenticated) { %>
      <button type="submit">Se déconnecter</button>
    <% } %>
  </form>
</body>
</html>